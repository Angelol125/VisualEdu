<Window x:Class="EduVisual.TheoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window General" Height="800" Width="1000" Background="{x:Null}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="blackboard.jpg"/>
        </Grid.Background>
        <Button x:Name="Home_Btn" Content="" HorizontalAlignment="Left" Margin="35,650,0,0" VerticalAlignment="Top" ToolTip="Επιστροφή στο κεντρικό μενού" Width="75" Height="75" Click="Home_Clicked" BorderBrush="#FF0690A6">
            <Button.Background>
                <ImageBrush ImageSource="house-icon.png" Stretch="UniformToFill"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="house-icon.png" Stretch="Uniform"/>
            </Button.OpacityMask>
        </Button>

    </Grid>
</Window>
